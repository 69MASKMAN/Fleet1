<%- include("partials/header") -%>
    <title>Signup</title>
  </head>
<body>

    <div class="form">
        <div clsss="signup_title"><h3><i class="fa fa-user-plus mr-3" style="font-size:40px;"></i>Please Sign Up for new account</i></h3></div><hr>
        <form action="/signup" method="POST">
            <div class="row">
              <div class="form-group col">
                  <label for="exampleInputName1">First name*</label>
                  <input type="text" class="form-control my_input" name="f_name" placeholder="enter your first name">
              </div>
              <div class="form-group col">
                  <label for="exampleInputName1">Last name*</label>
                  <input type="text" class="form-control my_input" name="l_name" placeholder="enter your last name">
              </div>
            </div>
            <div class="row">
                <div class=" col form-group">
                    <label for="exampleInputEmail1">Email*</label>
                    <input type="email" class="form-control my_input " name="email" placeholder="enter your email">
                </div>
                <div class=" col form-group">
                      <label for="exampleInputGender1">gender*</label>
                      <select class="form-control" name="gender" aria-placeholder="gender" >
                        <option>male</option>
                        <option>female</option>
                      </select>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password*</label>
                <input type="password" class="form-control my_input" name="password" placeholder="enter your password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Confirm Password*</label>
                <input type="password" class="form-control my_input" name="password_2" placeholder="Re-enter your password">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}" >
            <p style="color:rgb(22, 22, 22);"><input type="checkbox" name="agreement" style="padding-top: 15px;">  Agree with our user policy</p>
            <button type="submit" class="btn btn-primary login_btn">Sign Up</button>

        </form><br>
        <p class="my_redirector"><hr style="width: 25%; background-color:darkgray; float:left;" >Already have an account ? <a href="/signin">Sign In</a><hr style="width: 24%; background-color:darkgray; float:right;" ></p>
    </div>

<%- include("partials/footer") -%>
