<%- include("partials/header") -%>
           <title>Update Profile</title>
         </head>
       <body>
        <%- include("partials/navbar") -%>
     <div class="user_update">
        <form action="/update_profile" method="POST" enctype="multipart/form-data" >
            <img src="/company_driver_dp/<%= company_dp %>" height="130px" width="130px">
            <h1 class="h3 mb-3 font-weight-normal">Update your profile</h1><br>
            <div class="form-group">
              <input type="text" name="company_name" class="form-control mb-3" placeholder="Company Name" required>
            </div>
            <div class="form-group">
              <input type="text" name="contact_no" class="form-control mb-3" placeholder="Contact No." required>
            </div>
            <div class="form-group">
              <input type="text" name="address" class="form-control mb-3" placeholder="Address" required>
            </div> 
            <div class="form-row">
              <div class="form-group col-xl-6">
                <input type="file" name="company_dp">
              </div>
              <div class="form-group col-xl-6">
                <button class="btn ml-0 text-white" style="background-color: black;" type="submit">Update</button>
              </div>
          </div> 
        </form>
     </div>



<%- include("partials/footer") -%>
